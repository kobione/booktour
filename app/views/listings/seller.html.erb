<table class="table table-striped table-bordered">
	<tr>
		<th class="center">Image</th>
		<th>Name</th>
		<th>Description</th>
		<th>Price</th>
		<th>Actions</th>
	</tr>

    <% @listings.each do |listing| %>
    	<tr>
    			<!-- added class: "thumbnail col-xs-3" as an ugle hack for the IMAGE.
    			     *Default image* (only) will not user :thumb for some reason.
    			     Need to fix.-->
			<td> <%= image_tag listing.image.url(:thumb), class: "thumbnail col-xs-3" %> </td>
			<td> <%= listing.name %> </td>
			<td> <%= listing.description %> </td>
			<td> <%= number_to_currency(listing.price) %> </td>
			<td>
				<div class="btn-group">
				  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
				    Action <span class="caret"></span>
				  </button>
				  <ul class="dropdown-menu" role="menu">
				    <li><%= link_to "View", listing, class: "btn btn-link" %></li>
				    <li><%= link_to "Edit", edit_listing_path(listing), class: "btn btn-link"  %></li>
				    <li><%= link_to "De-list", listing, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link"  %></li>
				    <li class="divider"></li>
				    <li><a href="#">Separated link</a></li>
				  </ul>
				</div>	
			</td>
		</tr>
    <% end %>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>